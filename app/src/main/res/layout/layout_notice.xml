<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main"
    android:gravity="center"
    android:padding="@dimen/x10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kuang_style"
        android:gravity="center"
        android:padding="@dimen/x10">

        <ImageView
            android:id="@+id/tv_notice"
            style="@style/text_adware"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_notice" />

        <LinearLayout
            android:id="@+id/lin_notice_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_notice_more"
            android:layout_toRightOf="@+id/tv_notice"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:background="#000" />

            <TextView
                style="@style/text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hot" />


            <com.dq.liuhe.view.MarqueTextView
                android:id="@+id/marqueTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end" />

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:background="#000" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_notice_more"
            style="@style/text_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="更多" />

    </RelativeLayout>

</LinearLayout>
