<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E3E3E3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/x15">

            <Button
                android:id="@+id/but_mc_menu1"
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_menu002"
                android:text="我的资料" />

            <Button
                android:id="@+id/but_mc_menu2"
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_menu003"
                android:text="购物车" />

            <Button
                android:id="@+id/but_mc_menu3"
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_menu004"
                android:text="我的收藏" />

            <Button
                android:id="@+id/but_mc_menu6"
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_menu007"
                android:text="积分商城" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/but_mc_update"
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_update"
                android:text="版本更新" />

            <Button
                android:visibility="invisible"
                android:id="@+id/but_mc_menu4"
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_menu005"
                android:text="我的足迹" />

            <Button
                android:visibility="invisible"
                android:id="@+id/but_mc_menu5"
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_menu006"
                android:text="优惠券" />

            <Button
                android:visibility="invisible"
                android:id="@+id/but_mc_menu0"
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_menu001"
                android:text="分销中心" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginBottom="10dp"
        android:background="#E3E3E3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E3E3E3" />

    <LinearLayout
        android:gravity=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x15">

        <Button
            android:id="@+id/but_mc_menu12"
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_address"
            android:text="收货地址" />

        <Button
            android:id="@+id/but_mc_aboutus"
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_aboutus"
            android:text="关于我们" />


        <Button
            android:id="@+id/but_mc_menu13"
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_menu0013"
            android:text="退出登录" />

        <Button
            android:visibility="invisible"
            android:id="@+id/but_mc_collect"
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_menu004"
            android:text="我的收藏" />

    </LinearLayout>

</LinearLayout>
